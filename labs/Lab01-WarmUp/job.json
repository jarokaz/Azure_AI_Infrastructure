
{
    "$schema": "https://raw.githubusercontent.com/Azure/BatchAI/master/schemas/2017-09-01-preview/job.json",
    "properties": {
        "nodeCount": 1,
        "tensorFlowSettings": {
            "pythonScriptFilePath": "$AZ_BATCHAI_INPUT_SCRIPT/train.py",
            "masterCommandLineArgs": "-p"
        },
        "stdOutErrPathPrefix": "$AZ_BATCHAI_MOUNT_ROOT/azurefileshare",
        "inputDirectories": [{
            "id": "SCRIPT",
            "path": "$AZ_BATCHAI_MOUNT_ROOT/azurefileshare/lab01"
        }],
        "containerSettings": {
            "imageSourceRegistry": {
                "image": "tensorflow/tensorflow:1.6.0-gpu"
            }
        }
    }
}
